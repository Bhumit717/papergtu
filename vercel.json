{
    "buildCommand": "cd gtu-papers-app && npm install && npm run build",
    "outputDirectory": "gtu-papers-app/dist",
    "framework": "vite",
    "headers": [
        {
            "source": "/papers/:path*",
            "headers": [
                {
                    "key": "Content-Disposition",
                    "value": "inline"
                },
                {
                    "key": "Content-Type",
                    "value": "application/pdf"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/papers/:path*",
            "destination": "https://raw.githubusercontent.com/Bhumit717/papergtu/main/papers/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}