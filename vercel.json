{
    "buildCommand": "cd gtu-papers-app && npm install && npm run build",
    "outputDirectory": "gtu-papers-app/dist",
    "framework": "vite",
    "headers": [
        {
            "source": "/papers/:path*",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/pdf"
                },
                {
                    "key": "Content-Disposition",
                    "value": "inline"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/papers/:path*",
            "destination": "https://media.githubusercontent.com/media/Bhumit717/papergtu/main/papers/:path*"
        },
        {
            "source": "/sitemap.xml",
            "destination": "/sitemap.xml"
        },
        {
            "source": "/robots.txt",
            "destination": "/robots.txt"
        },
        {
            "source": "/favicon.ico",
            "destination": "/favicon.ico"
        },
        {
            "source": "/site.webmanifest",
            "destination": "/site.webmanifest"
        },
        {
            "source": "/((?!papers|sitemap\\.xml|robots\\.txt|favicon\\.ico|site\\.webmanifest|.*\\.).*)",
            "destination": "/index.html"
        }
    ]
}