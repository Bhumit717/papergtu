{
    "buildCommand": "cd gtu-papers-app && npm install && npm run build",
    "outputDirectory": "gtu-papers-app/dist",
    "framework": "vite",
    "headers": [
        {
            "source": "/papers/:path*",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/pdf"
                },
                {
                    "key": "Content-Disposition",
                    "value": "inline"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        },
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/papers/:path*",
            "destination": "https://media.githubusercontent.com/media/Bhumit717/papergtu/main/papers/:path*"
        },
        {
            "source": "/sitemap.xml",
            "destination": "/sitemap.xml"
        },
        {
            "source": "/robots.txt",
            "destination": "/robots.txt"
        },
        {
            "source": "/((?!papers|sitemap\\.xml|robots\\.txt|favicon.*|android-.*|apple-touch-.*|site\\.webmanifest|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}